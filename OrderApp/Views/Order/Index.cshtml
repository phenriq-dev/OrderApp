@model List<OrderApp.Models.Order>
@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="text-primary">Orders</h2>

    <table class="table table-striped table-bordered shadow">
        <thead class="table-dark">
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr data-id="@order.Id">
                    <td>@order.Product</td>
                    <td>@order.Quantity</td>
                    <td>
                        <span class="badge @(order.Status == "Completed" ? "bg-success" : "bg-warning")">
                            @order.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2 class="text-primary mt-4">Create new order</h2>
    <div class="card shadow">
        <div class="card-body">
            <form id="orderForm">
                <div class="mb-3">
                    <label class="form-label">Product</label>
                    <input type="text" name="Product" required class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="number" name="Quantity" required class="form-control" min="1" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Create Order</button>
            </form>
        </div>
    </div>

    <div id="notificationContainer" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;"></div>
    <div id="notifications"></div>

</div>

<script src="~/js/signalr.min.js"></script>
<script src="~/js/notifications.js"></script>
<script src="~/js/orders.js"></script>
